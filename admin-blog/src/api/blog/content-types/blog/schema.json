{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Блог"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 3,
      "maxLength": 255
    },
    "Category": {
      "type": "enumeration",
      "enum": [
        "Программирование",
        "Администрирование",
        "Дизайн",
        "Полезные ссылки"
      ],
      "required": true
    },
    "Summary": {
      "type": "text",
      "required": true,
      "maxLength": 255,
      "minLength": 3
    },
    "IsFeatured": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "Thumbnail": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "FeaturedImage": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "Content": {
      "type": "richtext",
      "required": true
    }
  }
}
